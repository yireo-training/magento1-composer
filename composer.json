{
    "name": "yireo-training/magento1-composer",
    "description": "Magento 1 build based on composer",
    "require-dev": {
        "phpunit/phpunit": "~4.4"
    },
    "require": {
        "magento-hackathon/magento-composer-installer" : "3.0.*",
        "inchoo/php7" : "~2.1",
        "yireo/yireo_disablelog" : "~0.0",
        "bragento/magento-composer-installer": "~1",  
        "magento/core": "~1.9"
    },
    "authors": [
        {
            "name": "Jisse Reitsma",
            "email": "jisse@yireo.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.firegento.com"
        },
        {
            "type": "vcs",
            "url": "git@github.com:AydinHassan/magento-community.git"
        }
    ],
    "extra": {
        "auto-append-gitignore": true,
        "magento-root-dir": "public"
    }
}
